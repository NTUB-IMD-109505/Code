<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFE2bf">

    <LinearLayout
        android:id="@+id/lv_picbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lv_base"
                android:layout_width="314dp"
                android:layout_height="282dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/imgview_rounde"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_show"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    app:srcCompat="@drawable/coffee" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_tvf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_barnum"
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/textview_rounde"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:textColor="#fff"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_tvs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:background="@drawable/textview_rounde"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:textColor="#fff"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_tvt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="55dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_info"
                    android:layout_width="286dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/textview_rounde"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lh_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_pre"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounde"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_next"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounde"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_view"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounde"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



